#!/usr/bin/env python3
import click

from sample_sheet import SampleSheet


@click.group(context_settings=dict(help_option_names=['-h', '--help']))
def cli():
    pass


@cli.command()
@click.argument('path')
def summary(path):
    """Pretty print a sample sheet"""
    print(SampleSheet(path))


@cli.command()
@click.argument('path')
def to_json(path):
    """Stream this sample sheet into JSON"""
    print(SampleSheet(path).to_json())


if __name__ == '__main__':
    cli()
