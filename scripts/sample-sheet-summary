#!/usr/bin/env python3
import click

from sample_sheet import SampleSheet


@click.command(context_settings=dict(help_option_names=['-h', '--help']))
@click.argument('path')
def sample_sheet_summary(path):
    """Display summary information about an Illumina sample sheet."""
    print(SampleSheet(path))


if __name__ == '__main__':
    sample_sheet_summary()
